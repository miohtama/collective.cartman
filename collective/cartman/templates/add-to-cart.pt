<div tal:condition="python:view.data"
    tal:attributes="data-product view/json"
    class="product">

    <h2 tal:content="view/data/title" />

    <div class="product-image-wrapper" tal:condition="view/data/img">
        <img tal:attributes="url view/data/img" class="product-image" />
    </div>

    <p tal:content="view/data/description" />

    <form class="well form-inline">
        <p>
            Price <strong tal:content="view/data/price" />
            EUR
        </p>
        <input type="number" value="1" class="add-count" />
        <button type="button" class="btn btn-primary add-button">
            <i class="icon-plus icon-white"></i>
            Add to cart
        </button>
    </form>

</div>