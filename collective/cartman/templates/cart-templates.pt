<!--
Transparency tempaltes for cart management.

There are "template sources". Templates are run
against cart data to generte final user interface elements
to the page body.
-->
<div id="templates" style="display: none">
    <!-- Shopping cart summary appearing on every page -->
    <div id="mini-cart-template">
        <div class="mini-cart-container">
            <span data-bind="filled">
                <ul data-bind="products">
                    <li class="checkout-line">
                        <a data-bind="name"></a>
                        <span class="remove">x</span>
                    </li>
                </ul>
                <div>
                    <button class="btn printButton">
                        <i class="icon-print"></i>
                        Tulosta
                    </button>
                    <button class="btn showButton">
                        <i class="icon-eye-open"></i>
                        Näytä
                    </button>
                </div>

                <div class="emptyCartText">
                    <p>Kerää sivuja matkasuunnitelmaan, jonka voit tulostaa. Voit lisätä matkasuunnitelmaan kohteita, yrityksiä, tapahtumia ja aktiviteetteja.</p>
                </div>
            </span>
        </div>
    </div>
    <!--
    Pop-up window checkout list with count edit and delete

    Crude example suitable for Finnish eCommerce site.
    -->
    <div id="checkout-popup-template">
        <div class="close"></div>
        <div class="pb-ajax">
            <table class="checkout-list table table-condensed">
                <thead>
                    <tr>
                        <th><!-- image --></th>
                        <th> Nimi </th>
                        <th> Kuvaus </th>
                        <th class="column-remove-th"> Poista </th>
                    </tr>
                </thead>
                <tbody data-bind="products">
                    <tr class="checkout-line">
                        <td>
                            <a data-bind="img-url">
                                <img data-bind="product-img" />
                            </a>
                        </td>
                        <td><a data-bind="name" /></td>
                        <td data-bind="description">
                            <div data-bind="desc"></div>
                            <!--
                            <div data-bind="url"></div>
                            -->
                        </td>
                        <td class="column-remove">
                            <span style="color: red">x</span>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="checkout-footer">
                <div class="checkout-buttons">

                    <div class="left">
                        <button type="button" class="btn btn-danger remove-all">
                            <i class="icon-white icon-remove"></i>
                            Poista kaikki
                        </button>
                    </div>

                    <div class="right">

                        <button type="button" class="btn btn-success emailButton">
                            <i class="icon-white icon-print"></i>
                            Läheta sähköpostilla
                        </button>

                        <button type="button" class="btn btn-success printButton">
                            <i class="icon-white icon-print"></i>
                            Tulosta
                        </button>
                    </div>

                    <div style="clear: both">
                        <!-- -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- checkout-popup-tempalte -->
    <div id="checkout-popup-empty-template">
        <a class="close"></a>
        <p class="empty-checkout">
            Matkasuunnitelmasi on tyhjä
        </p>
    </div>

    <!-- counter template -->
    <div id="counter-template">
        <span>Oma Kalajoki (<span data-bind="count"></span>)</span>
    </div>
</div>